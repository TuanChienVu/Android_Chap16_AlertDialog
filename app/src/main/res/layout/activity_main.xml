<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnCountryCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CountryCode"
        android:layout_below="@+id/edPhoneNo"
        android:layout_alignLeft="@+id/edPhoneNo"
        android:layout_alignStart="@+id/edPhoneNo"
        android:layout_marginTop="24dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/edPhoneNo"

        android:background="@android:drawable/editbox_background_normal"
        android:hint="+00-000-000-000"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Your Phone Number"
        android:id="@+id/textView"
        android:layout_marginTop="52dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/edPhoneNo"
        android:layout_alignStart="@+id/edPhoneNo"
        android:textStyle="italic"
        android:textColor="#fb2828" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/btnSave"
        android:layout_alignBottom="@+id/btnCountryCode"
        android:layout_alignRight="@+id/edPhoneNo"
        android:layout_alignEnd="@+id/edPhoneNo"
        android:visibility="invisible" />

</RelativeLayout>